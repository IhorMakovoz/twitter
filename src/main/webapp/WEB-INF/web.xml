<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">


    <servlet>
        <servlet-name>signupservlet</servlet-name>
        <servlet-class>com.in6k.twitter.servlets.SignUpPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>signupservlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>com.in6k.twitter.servlets.LoginPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutservlet</servlet-name>
        <servlet-class>com.in6k.twitter.servlets.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logoutservlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>messageservlet</servlet-name>
        <servlet-class>com.in6k.twitter.servlets.MessageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>messageservlet</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>homeservlet</servlet-name>
        <servlet-class>com.in6k.twitter.servlets.HomePageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>homeservlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>followservlet</servlet-name>
        <servlet-class>com.in6k.twitter.servlets.FollowServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>followservlet</servlet-name>
        <url-pattern>/follow</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>unfollowservlet</servlet-name>
        <servlet-class>com.in6k.twitter.servlets.UnFollowServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>unfollowservlet</servlet-name>
        <url-pattern>/unfollow</url-pattern>
    </servlet-mapping>





